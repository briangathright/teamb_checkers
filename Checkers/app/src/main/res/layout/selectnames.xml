<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ff87e0ff"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/player1EditText"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Player one&apos;s Name"
        android:layout_alignParentStart="true"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/button4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="onClickContinueButton"
        android:textStyle="bold"
        android:textColor="#ff0c0c0e"
        android:textColorHighlight="@color/highlighted_text_material_dark"
        android:textSize="@dimen/abc_text_size_title_material"
        android:background="#ffff8286"



        />

</RelativeLayout>