<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background15"
    android:id="@+id/background10">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/OnePlayer"
        android:id="@+id/button2"
        android:onClick="onClickAIGameButton"
        android:textStyle="bold"
        android:textColor="#ff0c0c0e"
        android:textColorHighlight="@color/highlighted_text_material_dark"
        android:textSize="@dimen/abc_text_size_title_material"
        android:background="#d2b48c"

        android:layout_marginBottom="88dp"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TwoPlayer"
        android:id="@+id/button3"
        android:onClick="onClickHumanGameButton"
        android:textStyle="bold"
        android:textColor="#ff0c0c0e"
        android:textColorHighlight="@color/highlighted_text_material_dark"
        android:textSize="@dimen/abc_text_size_title_material"
        android:background="#d2b48c"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remote Play"
        android:id="@+id/button4"
        android:textStyle="bold"
        android:layout_marginTop="81dp"
        android:textSize="@dimen/abc_text_size_title_material"
        android:background="#d2b48c"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button2" />

</RelativeLayout>